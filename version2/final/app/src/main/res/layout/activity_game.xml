<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GameActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="151dp"
        android:text='請先選擇"比大"或是"比小"，在點擊玩家牌面'
        android:textSize="18sp"
        tools:text='請先選擇"比大"或是"比小"，在點擊玩家牌面' />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_above="@+id/btnPlayerPoker"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-59dp"
        android:layout_marginStart="70dp"
        android:text="玩家"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="24sp"
        tools:text="玩家" />

    <ImageButton
        android:id="@+id/btnPlayerPoker"
        android:layout_width="155dp"
        android:layout_height="201dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="59dp"
        android:layout_weight="1"
        android:layout_x="175dp"
        android:layout_y="0dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/blue_back"
        tools:layout_editor_absoluteX="198dp"
        tools:layout_editor_absoluteY="48dp" />

    <ImageView
        android:id="@+id/imgComputerPoker"
        android:layout_width="150dp"
        android:layout_height="201dp"
        android:layout_alignEnd="@+id/btnBig"
        android:layout_alignTop="@+id/btnPlayerPoker"
        android:layout_weight="1"
        android:layout_x="1dp"
        android:layout_y="0dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/red_back"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="48dp" />

    <Button
        android:id="@+id/btnBig"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnSmall"
        android:layout_toEndOf="@+id/btnPlayerPoker"
        android:layout_weight="1"
        android:layout_x="65dp"
        android:layout_y="321dp"
        android:text="比大"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="348dp" />

    <Button
        android:id="@+id/btnSmall"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnPlayerPoker"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="185dp"
        android:layout_weight="1"
        android:layout_x="196dp"
        android:layout_y="321dp"
        android:text="比小"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="198dp"
        tools:layout_editor_absoluteY="348dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_above="@+id/btnPlayerPoker"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="-59dp"
        android:layout_marginEnd="92dp"
        android:text="電腦"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="24sp"
        tools:text="電腦" />

</RelativeLayout>