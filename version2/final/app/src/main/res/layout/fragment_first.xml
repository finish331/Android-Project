<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.e.user.myapplication.first">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:id="@+id/secondInput"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/firstInput"
        android:layout_alignBottom="@+id/firstInput"
        android:layout_centerHorizontal="true"
        android:digits="1234567890"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:maxLength="1" />

    <EditText
        android:id="@+id/firstInput"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/secondInput"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/secondInput"
        android:layout_marginEnd="73dp"
        android:layout_marginRight="73dp"
        android:layout_marginTop="14dp"
        android:digits="1234567890"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:maxLength="1" />

    <EditText
        android:id="@+id/thirdInput"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/secondInput"
        android:layout_alignBottom="@+id/secondInput"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_toEndOf="@+id/secondInput"
        android:layout_toRightOf="@+id/secondInput"
        android:digits="1234567890"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:maxLength="1" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:text="@string/clear" />

    <TextView
        android:id="@+id/messenge"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/secondInput"
        android:layout_marginTop="13dp"
        android:gravity="center_horizontal"
        android:text="@string/text123"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/invoiceText"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_below="@+id/messenge"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@+id/invoiceText"
        android:layout_centerHorizontal="true"
        android:src="@drawable/transparent" />

    <TextView
        android:id="@+id/invoiceNum"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnClear"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="center_horizontal"
        android:textSize="18sp" />

</RelativeLayout>
